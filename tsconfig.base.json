{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@workflow/api": ["packages/workflow-api/src/index.ts"],
      "@workflow/common": ["packages/workflow-common/src/index.ts"],
      "@workflow/config": ["packages/workflow-config/src/index.ts"],
      "@everbyte/contracts": ["packages/workflow-contracts/src/index.ts"],
      "@workflow/core": ["packages/workflow-core/src/index.ts"],
      "@workflow/data": ["packages/workflow-data/src/index.ts"],
      "@workflow/database": ["packages/workflow-database/src/index.ts"],
      "@workflow/modules": ["packages/workflow-modules/src/index.ts"],
      "@everbyte/shared": ["packages/workflow-shared/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
